<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/light_blue_bg"
    android:layout_margin="8dp"
    android:layout_height="85dp">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/cicurlarProgressBar2"
        android:layout_width="70dp"
        android:layout_height="70dp"


        android:layout_marginStart="8dp"
        app:cpb_background_progressbar_width="7dp"
        app:cpb_progress="60"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="100"
        app:cpb_progressbar_color="@color/blue"


        app:cpb_progressbar_width="7dp"
        app:cpb_round_border="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cicurlarProgressBar2"
        app:layout_constraintTop_toTopOf="@+id/cicurlarProgressBar2" />

    <TextView
        android:id="@+id/priceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0/Monthly"
        android:textSize="16dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/titleTxt"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt" />

    <TextView
        android:id="@+id/percentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%0"
        app:layout_constraintBottom_toBottomOf="@+id/cicurlarProgressBar2"
        app:layout_constraintEnd_toEndOf="@+id/cicurlarProgressBar2"
        app:layout_constraintStart_toStartOf="@+id/cicurlarProgressBar2"
        app:layout_constraintTop_toTopOf="@+id/cicurlarProgressBar2" />
</androidx.constraintlayout.widget.ConstraintLayout>